@model Ehealth.ViewModels.ArticleFormViewModel

@{
    ViewBag.Title = Model.Title;
}

<h2>@Model.Title</h2>

@using (Html.BeginForm("Save", "Articles"))
{
    <div class="form-group">
        @Html.LabelFor(m => m.Article.Name)
        @Html.TextBoxFor(m => m.Article.Name, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Article.ReleaseDate)
        @Html.TextBoxFor(m => m.Article.ReleaseDate, "{0:d MMM yyyy}", new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Article.ArticleTypeId)
        @Html.DropDownListFor(m => m.Article.ArticleTypeId, new SelectList(Model.ArticleTypes, "Id", "Name"), "", new { @class = "form-control" })
    </div>
    @Html.HiddenFor(m => m.Article.Id)
    <button type="submit" class="btn btn-primary">Save</button>
}